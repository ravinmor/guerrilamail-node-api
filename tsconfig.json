{
  "include": [
    "./src/*.ts",
    "index.ts"
  ],
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  },
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./", 
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
